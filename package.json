{
  "name": "danmu",
  "version": "0.0.3",
  "description": "Flexible, cross-platform, powerful danmu library.",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/danmu.esm.js",
      "require": "./dist/danmu.cjs.js",
      "types": "./dist/danmu.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "prepare": "husky",
    "dev": "http-server -c-1 -p 8000 ./ -o index.html",
    "build": "rimraf ./dist && rollup --config && rimraf ./dist/__tests__",
    "build:watch": "rollup --config --watch",
    "format": "prettier --write --parser typescript \"src/**/*.(js|ts?(x))\""
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "author": "imtaotao",
  "keywords": [
    "danmu"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imtaotao/danmuku.git"
  },
  "bugs": {
    "url": "https://github.com/imtaotao/danmuku/issues"
  },
  "packageManager": "pnpm@9.1.3",
  "engines": {
    "node": "^20"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jest": "^29.5.12",
    "rimraf": "^5.0.7",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.4",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "small-queue": "^1.0.0",
    "hooks-plugin": "^1.0.4"
  }
}
